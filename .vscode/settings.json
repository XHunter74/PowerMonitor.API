{
    "cSpell.words": [
        "distro",
        "nestjs",
        "ormconfig",
        "powermonitor",
        "Smtp",
        "sysinfo",
        "systeminformation",
        "tasmota",
        "tele",
        "totalpower",
        "typeorm"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.enable": true,
    "eslint.validate": [
        "typescript",
        "javascript"
    ],
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "prettier.tabWidth": 4,
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}